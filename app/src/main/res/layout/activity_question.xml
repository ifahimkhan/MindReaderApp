<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.android.bot.magicpaper.QuestionActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Calculation"
        android:textColor="@color/cardview_dark_background"
        android:textSize="25dp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/txt2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_margin="10dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:text="\nThink of any two-digit number.\n Then add both digits together and subtract the result from the original number.\n"
            android:textAlignment="center"
            android:textColor="#03A9F4"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_centerHorizontal="true"
        android:id="@+id/cardtxt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2"
        android:layout_margin="10dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt2"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:text="Example for 32 \n 3 + 2 = 5 \n 32 - 5 = 27 \n 27 Would be your number!"
            android:textAlignment="center"
            android:textColor="#03A9F4"
            android:textSize="20dp" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_centerHorizontal="true"
        android:id="@+id/cardtxt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardtxt3"
        android:layout_margin="15dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt3"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="FIND A SYMBOL \n Find the symbol that Correspond your number."
        android:textAlignment="center"
        android:textColor="#03A9F4"
        android:textSize="20dp" />
</android.support.v7.widget.CardView>

</RelativeLayout>
